{
  "manifest_version": 3,
  "name": "Tab Link Copier",
  "version": "1.0",
  "description": "Copy URLs of selected tabs to clipboard.",
  "permissions": ["tabs", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
